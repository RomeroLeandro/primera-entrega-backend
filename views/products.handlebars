<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Productos</title>
  </head>
  <body>
    <h1>Lista de Productos</h1>

    <h4>Página: {{page}} de {{totalPages}}</h4>

    <div style="display: flex">
      <a href="/products?page={{page}}&limit={{limit}}&sort={{sort}}&category={{category}}&stock={{stock}}">10 por página</a>
      <a href="/products?page={{page}}&limit={{limit}}&sort={{sort}}&category={{category}}&stock={{stock}}">20 por página</a>
      <a href="/products?page={{page}}&limit={{limit}}&sort={{sort}}&category={{category}}&stock={{stock}}">50 por página</a>
    </div>

    <a href="/products?page={{page}}&limit={{limit}}&sort=asc&category={{category}}&stock={{stock}}">Precio ascendente</a>
    <a href="/products?page={{page}}&limit={{limit}}&sort=desc&category={{category}}&stock={{stock}}">Precio
      descendente</a>

    <!-- Agregar formulario para filtrar por categoría -->
    <form action="/products" method="get">
      <input type="hidden" name="page" value="{{page}}" />
      <input type="hidden" name="limit" value="{{limit}}" />
      <input type="hidden" name="sort" value="{{sort}}" />
      <input type="hidden" name="stock" value="{{stock}}" />
      <input
        type="text"
        name="category"
        placeholder="Filtrar por categoría"
        value="{{category}}"
      />
      <button type="submit">Filtrar</button>
    </form>

    <!-- Agregar formulario para filtrar por stock -->
    <form action="/products" method="get">
      <input type="hidden" name="page" value="{{page}}" />
      <input type="hidden" name="limit" value="{{limit}}" />
      <input type="hidden" name="sort" value="{{sort}}" />
      <input type="hidden" name="category" value="{{category}}" />
      <input
        type="number"
        name="stock"
        placeholder="Filtrar por stock"
        value="{{stock}}"
      />
      <button type="submit">Filtrar</button>
    </form>

    <div class="product-container">
      {{#each docs}}
        <div class="card">
          <div class="card-img"></div>
          <div class="card-info">
            <h3 class="text-title">{{this.title}}</h3>
            <p class="text-body">{{this.description}}</p>
          </div>
          <div class="card-footer">
            <span class="text-title">${{this.price}}</span>
            <div class="card-button">
              <svg class="svg-icon" viewBox="0 0 20 20">
                <path
                  d="M17.72,5.011H8.026c-0.271,0-0.49,0.219-0.49,0.489c0,0.271,0.219,0.489,0.49,0.489h8.962l-1.979,4.773H6.763L4.935,5.343C4.926,5.316,4.897,5.309,4.884,5.286c-0.011-0.024,0-0.051-0.017-0.074C4.833,5.166,4.025,4.081,2.33,3.908C2.068,3.883,1.822,4.075,1.795,4.344C1.767,4.612,1.962,4.853,2.231,4.88c1.143,0.118,1.703,0.738,1.808,0.866l1.91,5.661c0.066,0.199,0.252,0.333,0.463,0.333h8.924c0.116,0,0.22-0.053,0.308-0.128c0.027-0.023,0.042-0.048,0.063-0.076c0.026-0.034,0.063-0.058,0.08-0.099l2.384-5.75c0.062-0.151,0.046-0.323-0.045-0.458C18.036,5.092,17.883,5.011,17.72,5.011z"
                ></path>
                <path
                  d="M8.251,12.386c-1.023,0-1.856,0.834-1.856,1.856s0.833,1.853,1.856,1.853c1.021,0,1.853-0.83,1.853-1.853S9.273,12.386,8.251,12.386z M8.251,15.116c-0.484,0-0.877-0.393-0.877-0.874c0-0.484,0.394-0.878,0.877-0.878c0.482,0,0.875,0.394,0.875,0.878C9.126,14.724,8.733,15.116,8.251,15.116z"
                ></path>
                <path
                  d="M13.972,12.386c-1.022,0-1.855,0.834-1.855,1.856s0.833,1.853,1.855,1.853s1.854-0.83,1.854-1.853S14.994,12.386,13.972,12.386z M13.972,15.116c-0.484,0-0.878-0.393-0.878-0.874c0-0.484,0.394-0.878,0.878-0.878c0.482,0,0.875,0.394,0.875,0.878C14.847,14.724,14.454,15.116,13.972,15.116z"
                ></path>
              </svg>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    {{#if hasPrevPage}}
      <a
        href="/products?page={{prevPage}}&limit={{limit}}&sort={{sort}}&category={{category}}&stock={{stock}}"
      >Página previa</a>
    {{/if}}

    {{#if hasNextPage}}
      <a
        href="/products?page={{nextPage}}&limit={{limit}}&sort={{sort}}&category={{category}}&stock={{stock}}"
      >Página siguiente</a>
    {{/if}}

    {{! <script src="../public/js/socket.io.js"></script>
    <script src="../public/js/products.js"></script> }}
  </body>
</html>